@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Dashboard" title="Dashboard">
            <i class="bi bi-person-circle"></i> Dashboard
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-link nav-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-success me-2" asp-controller="Account" asp-action="Login">Log In</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-success" asp-controller="Account" asp-action="Register">Sign Up</a>
    </li>
}
</ul>
